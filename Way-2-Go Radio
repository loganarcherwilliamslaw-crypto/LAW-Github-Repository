import 'dart:io';
import 'dart:typed_data';
import 'package:flutter/material.dart';
import 'package:socket_io_client/socket_io_client.dart' as IO;
import 'package:permission_handler/permission_handler.dart';
import 'package:path_provider/path_provider.dart';
import 'package:audioplayers/audioplayers.dart';

void main() => runApp(MaterialApp(
  theme: ThemeData.dark().copyWith(
    scaffoldBackgroundColor: Color(0xFF1A1A1A),
    primaryColor: Colors.tealAccent,
  ),
  home: RadioHome(),
));

class RadioHome extends StatefulWidget {
  @override
  _RadioHomeState createState() => _RadioHomeState();
}

class _RadioHomeState extends State<RadioHome> {
  // --- Variables ---
  late IO.Socket socket;
  String currentChannel = "1";
  bool isTransmitting = false; // Are we talking?
  bool isRecordingChannel = false; // Are we recording the channel?
  
  // Audio Buffers
  List<int> recordingBuffer = []; // Stores audio bytes while recording
  
  // Playback
  final AudioPlayer audioPlayer = AudioPlayer();

  @override
  void initState() {
    super.initState();
    setupPermissions();
    connectToServer();
  }

  Future<void> setupPermissions() async {
    await [Permission.microphone, Permission.storage].request();
  }

  // --- Networking ---
  void connectToServer() {
    // Replace with your Free Server URL (e.g., https://my-radio-app.onrender.com)
    socket = IO.io('http://YOUR_SERVER_IP:3000', <String, dynamic>{
      'transports': ['websocket'],
      'autoConnect': false,
    });
    
    socket.connect();
    
    socket.onConnect((_) {
      print("Connected to Radio Tower");
      socket.emit('join_channel', currentChannel);
    });

    // LISTEN for incoming audio
    socket.on('incoming_voice', (data) {
      playLiveAudio(data); // 1. Play it live
      
      if (isRecordingChannel) {
        saveToBuffer(data); // 2. Save it if recording is ON
      }
    });
  }

  // --- Audio Logic ---
  
  // 1. Play incoming audio immediately (The "Walkie Talkie" part)
  void playLiveAudio(dynamic data) {
    // In a real app, you would feed these bytes into a PCM Stream Player.
    // libraries like 'sound_stream' or 'flutter_sound' handle this.
  }

  // 2. Save audio to local buffer
  void saveToBuffer(dynamic data) {
    // Assume data comes in as a list of bytes
    List<int> chunk = List<int>.from(data);
    recordingBuffer.addAll(chunk);
  }

  // 3. Save the buffer to a file on the phone
  Future<void> saveRecordingToFile() async {
    if (recordingBuffer.isEmpty) return;

    final directory = await getApplicationDocumentsDirectory();
    final fileName = "Recording_${DateTime.now().millisecondsSinceEpoch}.wav";
    final file = File('${directory.path}/$fileName');
    
    // Write the buffer to file (In reality, you need to add a WAV header here)
    await file.writeAsBytes(recordingBuffer, flush: true);
    
    // Clear buffer for next time
    setState(() {
      recordingBuffer = [];
    });
    
    ScaffoldMessenger.of(context).showSnackBar(
      SnackBar(content: Text("Saved: $fileName"))
    );
  }

  // --- UI ---
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text("Free Frequency $currentChannel"),
        actions: [
          IconButton(
            icon: Icon(Icons.folder_copy),
            onPressed: () {
              // Navigate to Recordings Library
              Navigator.push(context, MaterialPageRoute(builder: (c) => RecordingsLibrary()));
            },
          )
        ],
      ),
      body: Column(
        children: [
          // 1. Channel Switcher
          Container(
            padding: EdgeInsets.all(20),
            color: Colors.black26,
            child: Row(
              children: [
                Expanded(
                  child: TextField(
                    decoration: InputDecoration(
                      labelText: "Set Frequency (Channel)",
                      border: OutlineInputBorder(),
                      filled: true,
                    ),
                    onChanged: (val) => currentChannel = val,
                    onSubmitted: (val) {
                      socket.emit('join_channel', val);
                      setState(() {});
                    },
                  ),
                ),
              ],
            ),
          ),

          Expanded(
            child: Center(
              child: Column(
                mainAxisAlignment: MainAxisAlignment.center,
                children: [
                  // 2. The PTT Button
                  GestureDetector(
                    onLongPressStart: (_) {
                      setState(() => isTransmitting = true);
                      // Start sending mic data here
                    },
                    onLongPressEnd: (_) {
                      setState(() => isTransmitting = false);
                      // Stop sending mic data
                    },
                    child: Container(
                      height: 200,
                      width: 200,
                      decoration: BoxDecoration(
                        color: isTransmitting ? Colors.redAccent : Colors.teal,
                        shape: BoxShape.circle,
                        boxShadow: [
                          BoxShadow(blurRadius: 20, color: isTransmitting ? Colors.red : Colors.teal.withOpacity(0.5))
                        ]
                      ),
                      child: Icon(Icons.mic, size: 80, color: Colors.white),
                    ),
                  ),
                  SizedBox(height: 20),
                  Text(isTransmitting ? "TRANSMITTING..." : "HOLD TO TALK", 
                    style: TextStyle(fontWeight: FontWeight.bold, letterSpacing: 2)),
                ],
              ),
            ),
          ),

          // 3. Recording Controls
          Container(
            padding: EdgeInsets.all(20),
            decoration: BoxDecoration(
              color: Colors.grey[900],
              borderRadius: BorderRadius.vertical(top: Radius.circular(30))
            ),
            child: Row(
              mainAxisAlignment: MainAxisAlignment.spaceBetween,
              children: [
                Text("Record this Channel?", style: TextStyle(fontSize: 18)),
                Switch(
                  value: isRecordingChannel, 
                  activeColor: Colors.red,
                  onChanged: (val) async {
                    setState(() {
                      isRecordingChannel = val;
                    });
                    if (!val) {
                      // If turned OFF, save the file
                      await saveRecordingToFile();
                    }
                  }
                )
              ],
            ),
          )
        ],
      ),
    );
  }
}

// --- Recordings Library Screen ---
class RecordingsLibrary extends StatefulWidget {
  @override
  _RecordingsLibraryState createState() => _RecordingsLibraryState();
}

class _RecordingsLibraryState extends State<RecordingsLibrary> {
  List<FileSystemEntity> files = [];
  final AudioPlayer audioPlayer = AudioPlayer();

  @override
  void initState() {
    super.initState();
    loadFiles();
  }

  Future<void> loadFiles() async {
    final directory = await getApplicationDocumentsDirectory();
    setState(() {
      // Get all files that start with "Recording_"
      files = directory.listSync().where((file) => file.path.contains("Recording_")).toList();
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text("My Tapes")),
      body: files.isEmpty 
        ? Center(child: Text("No recordings yet.")) 
        : ListView.builder(
            itemCount: files.length,
            itemBuilder: (context, index) {
              File file = files[index] as File;
              String name = file.path.split('/').last;
              
              return Card(
                color: Colors.grey[850],
                margin: EdgeInsets.symmetric(horizontal: 10, vertical: 5),
                child: ListTile(
                  leading: Icon(Icons.tape_drive_rounded, color: Colors.white),
                  title: Text(name),
                  trailing: IconButton(
                    icon: Icon(Icons.play_arrow, color: Colors.tealAccent),
                    onPressed: () {
                      // Play the local file
                      audioPlayer.play(DeviceFileSource(file.path));
                    },
                  ),
                ),
              );
            },
          ),
    );
  }
}
